{
  "name": "lumos-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:debug": "VITE_DEBUG_VISUALIZER=true npm run build",
    "build:artifact": "npm run build && rm -f lumos-client-dist.zip && (cd dist && zip -qr ../lumos-client-dist.zip .)",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@types/chrome": "^0.0.287",
    "typescript": "^5.6.3",
    "vite": "^5.4.14"
  }
}
